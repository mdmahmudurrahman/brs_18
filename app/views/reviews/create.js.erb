<% if @review.errors.any? %>
  $("#review_form").prepend("<%= j render("shared/error_messages", object: @review) %>");
<% else %>
  $("#reviews-book").prepend("<%= j render "review", review: @review %>");
  $("#review_form").hide();
  $(".rating_box").val("1")
  $(".review_box").val("");
  $("#book-rater").html("<%= @book.reviews.size %>");
  $("#book-star-rating").html("<%= j render "shared/star_rating", book: @book %>");
<% end %>
